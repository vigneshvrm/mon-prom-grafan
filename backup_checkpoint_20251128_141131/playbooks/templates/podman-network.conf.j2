# Podman Network Configuration
# Generated by Ansible - Production Settings

[network]
# Default network backend
default_rootless_network_cmd = "slirp4netns"
default_rootless_network_cmd_options = []

# DNS configuration
dns_servers = []
dns_searches = []
dns_options = []

# Network plugin paths
plugin_dirs = [
    "/usr/libexec/cni",
    "/usr/lib/cni",
    "/opt/cni/bin"
]

# Default subnet for containers
default_subnet_pools = [
    { base = "10.88.0.0/16", size = 24 },
    { base = "10.89.0.0/16", size = 24 }
]

