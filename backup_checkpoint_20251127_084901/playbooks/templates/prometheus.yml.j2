# Scrape configurations
scrape_configs:
  # Prometheus self-monitoring
  - job_name: 'prometheus'
    static_configs:
      - targets: ['localhost:9090']
        labels:
          instance: 'prometheus-server'
          job: 'prometheus'

  # Node Exporter targets (dynamically added)
  - job_name: 'node-exporter'
    scrape_interval: {{ prometheus_scrape_interval | default('15s') }}
    scrape_timeout: 10s
    static_configs:
      # Targets will be added here automatically by the application
      - targets: []
        labels:
          job: 'node-exporter'
          exporter: 'node'

