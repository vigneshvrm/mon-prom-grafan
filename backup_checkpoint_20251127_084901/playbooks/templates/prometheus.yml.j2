# Production-Grade Prometheus Configuration
# Generated by Ansible - DO NOT EDIT MANUALLY
# Last updated: {{ ansible_date_time.iso8601 }}

global:
  # How frequently to scrape targets
  scrape_interval: {{ prometheus_scrape_interval | default('15s') }}
  
  # How frequently to evaluate rules
  evaluation_interval: {{ prometheus_evaluation_interval | default('15s') }}
  
  # Labels to add to any time series or alerts
  external_labels:
    cluster: 'monitoring'
    environment: 'production'
    prometheus: '{{ prometheus_container_name }}'
  
  # Timeout for scrape requests
  scrape_timeout: 10s
  
  # How long to wait before marking a target as down
  scrape_timeout_offset: {{ prometheus_timeout_offset | default('10s') }}

# Alertmanager configuration (if using)
